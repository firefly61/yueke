/**index.wxss**/

page {
  background: #f6f6f6;
  height: 100%;
  font-size: 24rpx;
}

.section {
  width: 100%;
}

.top-bar {
  background: #fff;
  padding-top: 40rpx;
  padding-left: 40rpx;
  padding-bottom: 40rpx;
}

.position-text {
  font-size: 32rpx;
  color: #27282E;
  line-height: 32rpx;
}

.arrow-down {
  display: inline-block;
  border-top: .25rem solid #27282e;
  border-left: .2rem solid transparent;
  border-bottom: .2rem solid transparent;
  border-right: .2rem solid transparent;
  margin-left: 5px;
  margin-top: 7px;
}

.carousel-box {
  height: 200px;
}

.slide-image {
  width: 100%;
}

.box {
  width:93%;
  background:#fff;
  box-shadow: 0px 0px 5px 0px rgba(39,40,46,0.05);
  border-radius: 2px;
  padding: 40rpx;
  box-sizing: border-box;
  margin-top: 30rpx;
}

.nav-item {
  width: 25%;
  display: inline-block;
  border-bottom: 1px splid #000;
  text-align: center;
}

.nav-image {
  width: 100rpx;
  height: 100rpx;
}

.nav-label {
  display: block;
}

.box-title {
  font-size: 34rpx;
  font-weight: 600;
  color: #27282E;
  line-height: 34rpx;
  display: block;
  margin-bottom: 20rpx;
}

.new-box, .news-item {
  height: 60rpx;
}

.news-item {
  line-height: 60rpx;
}

.news-item span {
  float: right
}

.course-list {
  border-top: 1px solid #ededed;
  padding: 0 1.25rem;
}

.course-item {
  padding: 15px 0;
  border-bottom: 1px solid #ebebed;
}

.img-box {
  width: 26.5%;
  height: 4.22rem;
  float: left;
  margin-right: 13px;
  position: relative;
}

.img-box image {
  width: 100%;
  height: 100%;
  border-radius: 2px;
}

.img-number {
  display: block;
  width: 2.38rem;
  height: 1.25rem;
  line-height: 1.25rem;
  position: absolute;
  bottom: 5px;
  right: 5px;
  opacity: 0.7;
  background: #27282E;
  border-radius: 10px;
  color: #fff;
  font-size: 0.75rem;
  text-align: center;

}

.img-number i {
  display: inline-block;
  width: 0.63rem;
  height: 0.63rem;
  background: url("data:image/png;base64,") no-repeat center;
  background-size: 100%;
  vertical-align: middle;
}

.text-box {
  width: 68.5%;
  float: left;
}

.text-box h2 {
  font-size: 1rem;
  color: #27282E;
  line-height: 1rem;
  max-width: 14.44rem;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  display: block;
  margin-bottom: 10px;
}

.text-box p {
      font-size: 0.75rem;
      line-height: 0.75rem;
      color: #858894;
      display: block;
      margin-bottom: 10px;
}

.text-box p.info {
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

